<block 
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:notal="http://www.infrae.com/silva/notal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/tal/i18n"
  tal:omit-tag=""
  tal:define="model request/model;
              viewer options/viewer;
              viewerobj python:model.get_viewer_obj(viewer);
              limit python:int(options['number_of_articles']);
              items python:model.get_items(limit, viewer);
              mangle modules/Products/Silva/mangle;
              ">
  <div tal:condition="python:options['inv_div']"
    tal:attributes="class python:options['inv_div']">

    <h2 tal:content="python: viewerobj.get_title()"
        tal:condition="python:options['show_title']=='1'">
      title
    </h2>

    <tal:block tal:condition="python:len(items) > 0">
      <tal:block tal:omit-tag="" tal:repeat="item items">

        <tal:block tal:define="title item/title">
          <h4 tal:content="structure title"
              tal:condition="python:options['show_link_article'] == 'separate'">
            title
          </h4>
          <h4 tal:condition="python:options['show_link_article'] != 'separate'">
            <a tal:attributes="href item/link"
                tal:content="structure title">
              title
            </a>
          </h4>
        </tal:block>

        <div>
          <tal:block tal:define="
              intro_text item/intro;
              number_of_characters python:options['number_of_characters']"
              tal:content="structure python:model.limit_intro(
                            intro_text, number_of_characters)"
              tal:condition="python: options['show_intro']=='intro'">
            Lead
          </tal:block>
          <tal:block tal:define="
              intro_text item/description;
              number_of_characters python:options['number_of_characters']"
              tal:content="structure python:model.limit_intro(
                            intro_text, number_of_characters)"
              tal:condition="python:(not item.intro() or 
                                  options['show_intro']=='description')">
            Lead
          </tal:block>

          <div i18n:translate="" 
                      tal:condition="python:int(options['show_creationdate'])">
            Creation date/time: 
            <span i18n:name="datetime" 
                tal:replace="python:mangle.DateTime(item.creationtime()).toStr()"
                tal:condition="python:int(options['show_creationdate'])">
              date
            </span>
          </div>
         
          <tal:block tal:condition="python:options['show_datetime']=='1'">
            <div i18n:translate="" tal:condition="item/start_datetime">
              Start date/time:
              <span i18n:name="datetime"
                  tal:replace="python:mangle.DateTime(item.start_datetime()).toStr()">
                date
              </span>
            </div>
            <div i18n:translate="" tal:condition="item/end_datetime">
              End date/time:
              <span i18n:name="datetime"
                  tal:replace="python:mangle.DateTime(item.end_datetime()).toStr()">
                date
              </span>
            </div>
          </tal:block>
         
          <div i18n:translate="" 
              tal:condition="python: (int(options['show_location']) and 
                  item.location())">
            Location:
            <span i18n:name=""
                tal:replace="item/location">
              location
            </span>
          </div>
           
          <div tal:condition="python: options['show_link_article'] == 'seperate'">
            <a tal:attributes="href item/link"
                tal:content="structure options/link_text_article">
              view item
            </a>
          </div>
        </div>
      </tal:block>

    </tal:block>

    <div tal:condition="python:len(items) <= 0">
      <i>There are no articles available.</i>
    </div>

    <div tal:condition="python:options['show_link']=='1'">
      <a tal:attributes="href python:viewerobj.absolute_url()"
          tal:content="structure options/link_text_viewer">
        View other articles
      </a>
    </div>

    <!-- <metal:block use-macro="here/feed_footer/macros/footer" /> -->

  </div>
</block>
