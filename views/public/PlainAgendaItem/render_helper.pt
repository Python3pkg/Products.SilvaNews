<init tal:define="global model request/model; global view here; global version options/version; global mangle modules/Products/Silva/mangle" tal:omit-tag="" />

<table cellspacing="0" cellpadding="1" width="100%" border="0">

<tr>
<td colspan="2">
<h2 tal:content="structure python:version.get_title()">Title</h2>
</td>
</tr>

<tr style="vertical-align:top">
<td style="padding-right:1em">
<p tal:replace="structure python: view.get_content(version)"></p>
</td>
<td width="20%" valign="top" style="font-size: 10px; padding-top:0.8em; text-align: right;">
<tal:block 
  define="creationdate python: mangle.DateTime(version.get_metadata_element('silva-extra', 'creationtime')).toStrOptionalTime()"
  condition="python: creationdate != ''">
<b>Creation date:</b><br />
<span tal:replace="structure creationdate"></span><br /><br />
</tal:block>
<b>Date and time:</b><br />
Start: <span tal:replace="structure python: mangle.DateTime(version.start_datetime()).toStrOptionalTime()"></span><br />
<tal:block condition="version/end_datetime">
End: <span tal:replace="structure python: mangle.DateTime(version.end_datetime()).toStrOptionalTime()"></span><br />
</tal:block>
<br />
<tal:block condition="version/location">
<b>Location:</b><br />
<span tal:replace="structure python: version.location().replace('\n', '<br />')"></span>
</tal:block>
</td>
</tr>
</table>
