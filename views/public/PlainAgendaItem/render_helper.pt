<span
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:notal="http://www.infrae.com/silva/notal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva_news"

  tal:define="global model request/model; global view here; global version options/version; global mangle modules/Products/Silva/mangle" tal:omit-tag=""
>

<table class="silvatable newstable" cellspacing="0" cellpadding="1" width="100%" border="0">

<tr>
<td class="titlerow" colspan="2">
<h2 tal:content="structure python:version.get_title()">Title</h2>
</td>
</tr>

<tr>
<td class="contentcell">
<p tal:replace="structure python: view.get_content(version)"></p>
</td>
<td class="metadata">
<tal:block 
  define="creationdate python: mangle.DateTime(version.get_metadata_element('silva-extra', 'creationtime')).toStrOptionalTime()"
  condition="python: creationdate != ''">
<b i18n:translate="">Creation date:</b><br />
<span tal:replace="structure creationdate"></span><br /><br />
</tal:block>
<b i18n:translate="">Date and time:</b><br />
Start: <span tal:replace="structure python: mangle.DateTime(version.start_datetime()).toStrOptionalTime()"></span><br />
<tal:block condition="version/end_datetime">
End: <span tal:replace="structure python: mangle.DateTime(version.end_datetime()).toStrOptionalTime()"></span><br />
</tal:block>
<br />
<tal:block condition="version/location">
<b i18n:translate="">Location:</b><br />
<span tal:replace="structure python: version.location().replace('\n', '<br />')"></span>
</tal:block>
</td>
</tr>
</table>

</span>
