<init tal:define="global model request/model; global view here; global version options/version; global mangle modules/Products/Silva/mangle" />

<table cellspacing="0" width="100%" border="0">

<tr>
<td>
<h2 tal:content="structure python:version.get_title()">Title</h2>
</td>
<td rowspan="3" width="20%" valign="top" style="font-size: 10px; background-color: #eeeeee; text-align: right;">
<b>Creation date:</b><br />
<span tal:replace="structure python: mangle.DateTime(version.get_metadata_element('silva-extra', 'creationtime')).toStr()"></span><br /><br />
<b>Date and time:</b><br />
<span tal:replace="structure python: mangle.DateTime(version.start_datetime()).toStr()"></span><br /><br />
<tal:block condition="version/location">
<b>Location:</b><br />
<span tal:replace="structure python: version.location().replace('\n', '<br />')"></span>
</tal:block>
</td>
</tr>

<tr>
<td>
<p tal:content="structure python: view.get_content(version)"></p>
</td>
</tr>

</table>
