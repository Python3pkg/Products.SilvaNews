<span
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:notal="http://www.infrae.com/silva/notal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva_news"

  tal:define="global model request/model; 
              global view here; 
              global version options/version; 
              global formatdate nocall:view/service_news/format_date" 
              tal:omit-tag=""
>

  <div class="margins newsheading">
    <h2 class="heading" tal:content="structure python:version.get_title()" />
  </div>

  <div class="newsitem_info">
    <div tal:define="creationdate python: formatdate(
                  version.get_metadata_element('silva-extra', 'creationtime'))"
          tal:condition="python: creationdate != ''">
      <div class="newsitem_info_title creationdate_title" i18n:translate="">Creation date:</div>
      <span class="datetime creationdate" tal:replace="structure creationdate" />
    </div>
    <div class="newsitem_info_title datetime_title" i18n:translate="">Date and time:</div>
    <div tal:define="startdate python: formatdate(
                        version.start_datetime(), version.display_time());
                      enddate python: formatdate(
                        version.end_datetime(), version.display_time())"
          tal:condition="startdate"
          class="datetime">
      <span class="newsitem_info_title startdatetime_title" i18n:translate="">Start:</span>
      <div tal:replace="startdate" />
      <span class="newsitem_info_title enddatetime_title" i18n:translate=""
            tal:condition="enddate">End:</span>
      <div tal:replace="enddate" />
    </div>

  </div>

  <div class="newsitem_content" 
        tal:content="structure python:view.get_content(version)" />

</span>
