<tal:block define="view here;
                   model view/REQUEST/model;
                   result python:model.get_merged_feed_contents();
                   silva_root view/silva_root;
                   " >

  <table class="listing sublisting"> 
    <tr class="top-controls">
      <td>
      </td>
    </tr>

    <tr>
      <td>
        <h2 tal:content="model/get_title">View News</h2>
      </td>
    </tr>
    
    <toc_entry tal:omit-tag=""
      tal:repeat="item result">
      <tr>
        <td>
          <h4 tal:content="structure item/title" tal:condition="item/title | nothing">title</h4>
          <tal:block tal:condition="item/description | nothing">
            <b tal:content="structure item/description">Lead</b>
            <br />
          </tal:block>
          <a tal:attributes="href item/link" tal:condition="item/link | nothing">view article</a>
        </td>
      </tr>

      <tr tal:condition="repeat/item/end">
        <td>&nbsp;</td>
      </tr>
    </toc_entry>

  </table>
</tal:block>
