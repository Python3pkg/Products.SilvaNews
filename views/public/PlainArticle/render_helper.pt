<span
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:notal="http://www.infrae.com/silva/notal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva_webshop"

  tal:define="global model request/model; 
              global view here; 
              global version options/version;"
              tal:omit-tag="" >

  <div class="margins">
    <h2 class="heading" tal:content="structure python:version.get_title()" />
  </div>

  <div>
    <div>
      <div i18n:translate="">Author:</div>
      <span class="author" tal:replace="model/author" />
    </div>
  </div>

  <div tal:content="structure python:view.get_content(version)" />

</span>
