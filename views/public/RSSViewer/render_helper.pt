<tal:block define="view here;
                   model view/REQUEST/model;
                   result python:model.get_channel();
                   silva_root view/silva_root;
                   channel result/channel;
                   " >

  <table width="100%" border="0" cellpadding="0" cellspacing="5">
    <tr>
      <td>
        <h2 style="margin-bottom:0.5em; width:100%; padding-bottom:0.5em; border-bottom:2px solid #88a">
          <a style="text-decoration:none; color:#0000aa;"
            tal:attributes="href channel/link" tal:content="channel/title | nothing">
            channel title
          </a>
        </h2>
        <a style="float:right; margin-top:0.3em;"
          tal:condition="channel/link" 
          tal:attributes="href model/rss_feed">
          <img border="0" width="36" height="14"
            tal:attributes="src string:${silva_root}/globals/xml.gif" />
        </a>
        <tal:block condition="channel/description">
            <span tal:replace="structure channel/description" /><br />
        </tal:block>
        <tal:block condition="channel/copyright | nothing">
          <span tal:replace="structure channel/copyright" />
        </tal:block>
      </td>
    </tr>
    <toc_entry tal:omit-tag=""
      tal:repeat="item python: result['items']">
      <tr>
        <td valign="top" align="left">
          <h4 tal:content="structure item/title" tal:condition="item/title | nothing">title</h4>
          <b tal:content="structure item/description" tal:condition="item/description | nothing">Lead</b><br />
          <a href="#" tal:attributes="href item/link" tal:condition="item/link | nothing">view article</a>
        </td>
      </tr>
    </toc_entry>
  </table>
</tal:block>
