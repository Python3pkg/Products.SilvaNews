<tal:block define="view here;
                   model view/REQUEST/model;
                   result python:model.get_channel();
                   silva_root view/silva_root;
                   channel result/channel;
                   " >

  <table border="0" cellpadding="0" cellspacing="5">
    <tr>
      <td colspan="2">
        <h2><span class="folder-title" tal:content="channel/title | nothing">View News</span></h2>
      </td>
    </tr>
    <tr>
      <td valign="top" colspan="2">
        <a tal:condition="channel/link" tal:attributes="href channel/link">
          <span tal:content="structure channel/link" /><br /><br />
        </a>
        <tal:block condition="channel/description">
            <span tal:replace="structure channel/description" /><br /><br />
        </tal:block>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <tal:block condition="channel/copyright | nothing">
          <span tal:replace="structure channel/copyright" /><br /><br />
        </tal:block>
      </td>
    </tr>
  </table>
  <br />


  <table width="100%" cellspacing="0" cellpadding="3" border="2"
    tal:attributes="cellspacing container/table_cellspacing;
    cellpadding container/table_cellpadding;
    border container/table_border">

    <toc_entry tal:omit-tag=""
      tal:repeat="item python: result['items']">

      <tr class="focus">

        <span tal:replace="nothing"> _______ title cell _______ </span>
        <td valign="top" align="left">
          <h2 tal:content="structure item/title" tal:condition="item/title | nothing">title</h2>
        </td>
      </tr>

      <tr class="focus-cycle">
        <td align="left" valign="top">
          <b tal:content="structure item/description" tal:condition="item/description | nothing">Lead</b><br /><br />
          <a href="#" tal:attributes="href item/link" tal:condition="item/link | nothing">view article</a>
        </td>
      </tr>

    </toc_entry>

  </table><br />
</tal:block>
