<tal:block define="global view here;
                   global show_details request/show_details | options/show_details | string:0;
                   global source here/newsfilter;
                   global results python:source.get_last_public_items(10);
                   global silva_root view/silva_root;
                   " />

<div class="margins">
<h2><span class="folder-title" tal:content="structure string:${here/get_title_html}">title here</span></h2>
</div>

<form>
<input type="button" class="button" onclick="" tal:attributes="onclick string:document.location = '${request/URL0}'" value="Hide details" tal:condition="python:show_details != '0'" />
<input type="button" class="button" onclick="" tal:attributes="onclick string:document.location = '${request/URL0}?show_details=1'" value="Show details" tal:condition="python:show_details == '0'" />
</form>

<tal:comment condition="nothing">Begin PublicationTable</tal:comment>

<table width="100%" cellspacing="0" cellpadding="3" border="2"
  tal:attributes="cellspacing container/table_cellspacing;
                  cellpadding container/table_cellpadding;
                  border container/table_border">


<span tal:replace="nothing"> ______________ listing iteration ______________ </span>
<toc_entry tal:omit-tag=""
  tal:repeat="obj results">
<cycle tal:define="oddrow repeat/obj/odd" tal:omit-tag="">
<span tal:replace="nothing"> _______ subheader row _______ </span>

<tr class="focus">
<td valign="top" align="left"><b style="font-size: 14px;" tal:content="obj/subheader">Subheader</b></td>
</tr>

<tr class="focus-cycle"
  tal:attributes="class python:test(oddrow, 'focus', 'focus-cycle')">

<span tal:replace="nothing"> _______ title cell _______ </span>
<td valign="top" align="left">
<h2 tal:content="structure obj/get_title_html">title</h2>
</td>
</tr>

<tr class="focus-cycle">
<td align="left" valign="top"><b tal:content="obj/lead">Lead</b><br /><br />
<a href="#" tal:attributes="href obj/getURL">zie persbericht</a>
</td>
</tr>

<tal:comment condition="nothing">________detailrow____________</tal:comment>
<tr tal:condition="python: show_details != '0'">
<td>
Info:<br />
<b tal:content="obj/info">Info</b><br /><br />
Contact-info:<br />
<b tal:content="obj/contact_info">Contact-info</b><br /><br />
Specific contact-info:<br />
<b tal:content="obj/specific_contact_info">Specific contact-info</b><br /><br />
Subjects:<br />
<b tal:content="structure python:view.render_lines(obj.subjects)">Subjects</b><br /><br />
Target audiences:<br />
<b tal:content="structure python:view.render_lines(obj.target_audiences)">Target audiences</b><br />
</td>
</tr>

</cycle>
</toc_entry>

<span tal:replace="nothing"> ______________ if no records ______________ </span>
<check tal:condition="python:len(results) == 0">
<tr class="focus-light">
<td colspan="2">
There are no articles.
</td>
</tr>
<tr class="divider">
<td><img tal:attributes="src string:${silva_root}/globals/pixel.gif" width="1" height="1" /></td>
</tr>
</check>
<!-- /iteration -->

</table>

<a href="#" tal:attributes="href string:?view=view_archive&show_details=${show_details}">Archive</a>
