<tal:block define="global view here;
                   global model view/REQUEST/model;
                   global results python:model.search_items(view.REQUEST['query']);
                   global silva_root view/silva_root;
                   global mangle modules/Products/Silva/mangle;
                   " />

<table width="100%" cellpadding="0" cellspacing="0" border="0">
<tr>
<td>
  <div class="margins">
    <h2><span class="folder-title">Search Agenda</span></h2>
  </div>
</td>
</tr>
</table>

<tal:comment condition="nothing">Begin PublicationTable</tal:comment>

<table width="100%" cellspacing="0" cellpadding="3" border="2" class="plain">

<tr class="topcontrols" valign="bottom">
<td style="align-right" colspan="2">
<form tal:attributes="action model/absolute_url" method="post">
<input type="text" name="query" />&nbsp;
<input class="button" type="submit" value="Search" title="Do a full text search: alt-s" accesskey="s" />
</form>
</td>
</tr>

<span tal:replace="nothing"> ______________ listing iteration ______________ </span>
<toc_entry tal:omit-tag=""
  tal:repeat="object results">
<tal:block define="obj object/getObject">
<tr class="odd">

<span tal:replace="nothing"> _______ title cell _______ </span>
<td valign="top">
<h2 tal:content="structure obj/get_title">title</h2>
<h3 tal:content="structure obj/subheader">subheader</h3>
</td>
</tr>

<tr class="even">
<td valign="top">
<b tal:content="structure obj/lead">Lead</b><br /><br />
<span tal:replace="structure python: 'Startdate/time:<br />%s<br /><br />' % mangle.DateTime(obj.start_datetime()).toStr()" tal:condition="obj/start_datetime">DateTime</span>
<a href="#" tal:attributes="href python:obj.get_content().absolute_url()">view article</a>
</td>
</tr>
</tal:block>
</toc_entry>

<span tal:replace="nothing"> ______________ if no records ______________ </span>
<check tal:condition="python:len(results) == 0">
<tr class="divider">
<td><img tal:attributes="src string:${silva_root}/globals/pixel.gif" width="1" height="1" /></td>
</tr>
<tr class="odd">
<td colspan="2">
There are no articles corresponding to your query.
</td>
</tr>
<tr class="divider">
<td><img tal:attributes="src string:${silva_root}/globals/pixel.gif" width="1" height="1" /></td>
</tr>
</check>
<!-- /iteration -->

</table><br />

<a href="#" tal:attributes="href string:?view=view_agenda">View Agenda</a><br />
<a href="#" tal:attributes="href string:?view=view_archive">View Archive</a>
