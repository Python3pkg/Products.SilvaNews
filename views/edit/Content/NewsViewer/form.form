<?xml version="1.0" encoding="iso-8859-1"?>

<form>
  <title></title>
  <name>form</name>
  <action></action>
  <enctype>None</enctype>
  <method>post</method>

  <i18n_domain>silva_news</i18n_domain>
  <i18n>form</i18n>

  <groups>
    <group>
      <title>Default</title>
      <fields>

      <field><id>number_is_days</id> <type>RadioField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <css_class></css_class>
          <orientation>vertical</orientation>
          <required type="int">1</required>
          <items>[('Yes', '1'), ('No', '0')]</items>
          <default></default>
          <title>show</title>
          <first_item type="int">0</first_item>
          <description>Show a specific number of items, or show items from a range of days in the past.</description>
          <external_validator></external_validator>
        </values>
        <tales>
          <items>python: [('number of days', 1), ('number of items', 0)]</items>
          <default>python: form.REQUEST.model.number_is_days()</default>
        </tales>
      </field>
      <field><id>number_to_show</id> <type>IntegerField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <start></start>
          <external_validator></external_validator>
          <display_maxwidth></display_maxwidth>
          <display_width type="int">20</display_width>
          <required type="int">1</required>
          <css_class></css_class>
          <default></default>
          <title>days / items number</title>
          <description>Number of news items to show per page.</description>
          <end></end>
          <extra></extra>
        </values>
        <tales>
          <default>python: form.REQUEST.model.number_to_show()</default>
        </tales>
      </field>
      <field><id>number_to_show_archive</id> <type>IntegerField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <start></start>
          <external_validator></external_validator>
          <display_maxwidth></display_maxwidth>
          <display_width type="int">20</display_width>
          <required type="int">1</required>
          <css_class></css_class>
          <default></default>
          <title>archive number</title>
          <description>Number of archive items to show per page.</description>
          <end></end>
          <extra></extra>
        </values>
        <tales>
          <default>python: form.REQUEST.model.number_to_show_archive()</default>
        </tales>
      </field>
      <field><id>filters</id> <type>MultiCheckBoxField</type>
        <values>
          <alternate_name></alternate_name>
          <description></description>
          <required type="int">1</required>
          <hidden type="int">0</hidden>
          <css_class></css_class>
          <default>[]</default>
          <title>filters</title>
          <orientation>vertical</orientation>
          <items>[]</items>
          <external_validator></external_validator>
          <unicode type="int">1</unicode>
        </values>
        <tales>
          <items>python: form.REQUEST.model.findfilters_pairs()</items>
          <default>python: form.REQUEST.model.filters()</default>
        </tales>
      </field>
      </fields>
    </group>
  </groups>
</form>
