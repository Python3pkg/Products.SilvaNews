<?xml version="1.0" encoding="iso-8859-1"?>

<form>
  <title></title>
  <name>tab_metadata_form</name>
  <action></action>
  <enctype>None</enctype>
  <method>POST</method>

  <groups>
    <group>
      <title>Default</title>
      <fields>

      <field><id>subjects</id> <type>MultiCheckBoxField</type>
        <values>
          <alternate_name></alternate_name>
          <required type="int">1</required>
          <hidden type="int">0</hidden>
          <items>[]</items>
          <default>[]</default>
          <title>subjects</title>
          <orientation>vertical</orientation>
          <description>
            Select the news subjects to filter on.
          </description>
          <css_class></css_class>
          <external_validator></external_validator>
          <unicode type="int">1</unicode>
        </values>
        <tales>
          <items>python:form.service_news.subject_form_tree()</items>
          <default>python:form.REQUEST.model.subjects()</default>
        </tales>
      </field>
      <field><id>target_audiences</id> <type>MultiCheckBoxField</type>
        <values>
          <alternate_name></alternate_name>
          <required type="int">1</required>
          <hidden type="int">0</hidden>
          <items>[]</items>
          <default>[]</default>
          <title>target audiences</title>
          <orientation>vertical</orientation>
          <description>
            Select the target audiences to filter on.
          </description>
          <css_class></css_class>
          <external_validator></external_validator>
          <unicode type="int">1</unicode>
        </values>
        <tales>
          <items>python: form.service_news.target_audience_form_tree()</items>
          <default>python:form.REQUEST.model.target_audiences()</default>
        </tales>
      </field>
      <field><id>show_agenda_items</id> <type>RadioField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <items>[]</items>
          <orientation>vertical</orientation>
          <required type="int">1</required>
          <css_class></css_class>
          <default></default>
          <title>show agenda items</title>
          <first_item type="int">0</first_item>
          <description>If set to 'yes', show agenda items as well as news items.</description>
          <external_validator></external_validator>
        </values>
        <tales>
          <items>python: [('yes', 1), ('no', 0)]</items>
          <default>python: form.REQUEST.model.show_agenda_items()</default>
        </tales>
      </field>
      <field><id>keep_to_path</id> <type>RadioField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <items>[]</items>
          <orientation>vertical</orientation>
          <required type="int">1</required>
          <css_class></css_class>
          <default></default>
          <title>stick to path</title>
          <first_item type="int">0</first_item>
          <description>Setting to 'yes' keeps the filter local, showing only items in the content tree that are below the location of the filter.</description>
          <external_validator></external_validator>
        </values>
        <tales>
          <items>python: [('yes', 1), ('no', 0)]</items>
          <default>python: form.REQUEST.model.keep_to_path()</default>
        </tales>
      </field>
      <!-- XXX feature will be removed !! XXX
      <field><id>allow_rss_export</id> <type>RadioField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <items>[]</items>
          <orientation>vertical</orientation>
          <required type="int">1</required>
          <css_class></css_class>
          <default></default>
          <title>allow RSS export</title>
          <first_item type="int">0</first_item>
          <description></description>
          <external_validator></external_validator>
        </values>
        <tales>
          <items>python: [('yes', 1), ('no', 0)]</items>
          <default>python: form.REQUEST.model.allow_rss_export()</default>
          <description>python: "If set to 'yes', this filter can generate an RSS feed. The URL of the feed is: %s/rss_feed" % form.REQUEST.model.absolute_url()</description>
        </tales>
      </field>
      XXX  -->
      </fields>
    </group>
  </groups>
</form>
