<?xml version="1.0" encoding="iso-8859-1"?>

<form>
  <title></title>
  <name>tab_metadata_form</name>
  <action></action>
  <enctype>None</enctype>
  <method>POST</method>

  <i18n_domain>silva_news</i18n_domain>
  <i18n>tab_metadata_form</i18n>

  <groups>
    <group>
      <title>Default</title>
      <fields>

      <field><id>rss_description</id> <type>TextAreaField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <max_linelength></max_linelength>
          <max_length></max_length>
          <max_lines></max_lines>
          <width type="int">40</width>
          <external_validator></external_validator>
          <height type="int">2</height>
          <required type="int">0</required>
          <css_class></css_class>
          <default></default>
          <title>description</title>
          <description>Describe the type of news this filter delivers.</description>
          <extra></extra>
          <unicode type="int">1</unicode>
        </values>
        <tales>
          <default>python: form.REQUEST.model.rss_description()</default>
        </tales>
      </field>
      <field><id>rss_link</id> <type>StringField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <max_length></max_length>
          <external_validator></external_validator>
          <display_maxwidth></display_maxwidth>
          <display_width type="int">60</display_width>
          <required type="int">0</required>
          <css_class></css_class>
          <default></default>
          <title>link</title>
          <truncate type="int">0</truncate>
          <description>Enter the URL where the RSS feed should point to for information.</description>
          <extra>style="width:100%"</extra>
          <unicode type="int">1</unicode>
        </values>
        <tales>
          <default>python: form.REQUEST.model.rss_link()</default>
        </tales>
      </field>
      <field><id>rss_copyright</id> <type>StringField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <max_length></max_length>
          <external_validator></external_validator>
          <display_maxwidth></display_maxwidth>
          <display_width type="int">60</display_width>
          <required type="int">0</required>
          <css_class></css_class>
          <default></default>
          <title>copyright</title>
          <truncate type="int">0</truncate>
          <description>Enter a copyright notice (not used if left empty).</description>
          <extra>style="width:100%"</extra>
          <unicode type="int">1</unicode>
        </values>
        <tales>
          <default>python: form.REQUEST.model.rss_copyright()</default>
        </tales>
      </field>
      <field><id>allow_rss_search</id> <type>RadioField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <items>[]</items>
          <orientation>vertical</orientation>
          <required type="int">0</required>
          <css_class></css_class>
          <default></default>
          <title>allow RSS search</title>
          <first_item type="int">0</first_item>
          <description>If set to 'yes', extra information will be sent along with the RSS feed to enable searching this newsfilter using a remote form (the client will be sent to this Silva instance to view the results).</description>
          <external_validator></external_validator>
        </values>
        <tales>
          <items>python: [('yes', 1), ('no', 0)]</items>
          <default>python: form.REQUEST.model.allow_rss_search()</default>
        </tales>
      </field>
      <field><id>rss_search_description</id> <type>TextAreaField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <max_linelength></max_linelength>
          <max_length></max_length>
          <max_lines></max_lines>
          <width type="int">40</width>
          <external_validator></external_validator>
          <height type="int">2</height>
          <required type="int">0</required>
          <css_class></css_class>
          <default></default>
          <title>search description</title>
          <description>Description added to the search form.</description>
          <extra></extra>
          <unicode type="int">1</unicode>
        </values>
        <tales>
          <default>python: form.REQUEST.model.rss_search_description()</default>
        </tales>
      </field>
      </fields>
    </group>
  </groups>
</form>
