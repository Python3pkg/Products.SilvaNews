<?xml version="1.0" encoding="UTF-8"?>

<form>
  <title></title>
  <name>tab_status_form_news</name>
  <action></action>
  <enctype></enctype>
  <method></method>
  <i18n_domain>silva_news</i18n_domain>
  <i18n>tab_status_form_news</i18n>

  <groups multiple="true">
    <group>
      <title>default</title>
      <fields multiple="true">

      <field><id>display_datetime</id> <type>DateTimeField</type>
        <values>
          <date_only type="int">0</date_only>
          <alternate_name></alternate_name>
          <input_style>text</input_style>
          <hidden type="int">0</hidden>
          <input_order>dmy</input_order>
          <time_separator>:</time_separator>
          <date_separator>/</date_separator>
          <external_validator></external_validator>
          <required type="int">0</required>
          <default_now type="int">1</default_now>
          <css_class></css_class>
          <title>display date/time</title>
          <description>The date/time that is displayed for the public.</description>
          <extra></extra>
          <allow_empty_time type="int">1</allow_empty_time>
        </values>
        <tales>
          <time_separator>python:form.get_time_punctuation()</time_separator>
          <date_separator>python:form.get_date_punctuation()</date_separator>
          <default>python:field.REQUEST.model.get_editable() and field.REQUEST.model.get_editable().display_datetime() or None</default> 
        </tales>
      </field>
      <field><id>update_display_datetime</id> <type>CheckBoxField</type>
        <values>
          <alternate_name></alternate_name>
          <hidden type="int">0</hidden>
          <css_class></css_class>
          <default type="int">0</default>
          <title>update display date/time</title>
          <description>Changing this will also change where the news item appears in a chronological list.</description>
          <extra></extra>
          <external_validator></external_validator>
        </values>
        <tales>
        </tales>
      </field>
      </fields>
    </group>
  </groups>
</form>
