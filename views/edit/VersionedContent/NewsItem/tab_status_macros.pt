<tal:block i18n:translate="">request</tal:block>
</h3>
</td>
</tr>

<tr>
<input type="hidden" name="rejection_status" tal:attributes="value python:test(may_approve_content, 'true', 'false')" />
<input type="hidden" name="tab_name" value="publish" />
