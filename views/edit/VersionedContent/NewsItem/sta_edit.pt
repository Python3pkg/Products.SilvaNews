<span
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva_news"
  tal:define="global silva_root here/silva_root;
    model request/model; 
    view here;
    fields python:view.form_subjects_target_audiences.get_fields();
    split_render_after string:code;
    editable python:model.get_editable()"
  tal:omit-tag=""
>
 
<form method="POST" name="form" action="sta_submit">
<table class="listing">
<tr valign="top">
<td class="invisible" width="16"><img tal:attributes="src string:${silva_root}/globals/pixel.gif" width="1" height="1" border="0" alt="not editable" /></td>
<td class="invisible" colspan="3" width="98%">
<div class="front3" style="margin-bottom:0.5em">Article filtering</div>
</td>
<td class="invisible" width="60" align="right" valign="top">&nbsp;</td>
</tr>

<tr>
<td claa="invisible"  width="16">&nbsp;</td>
<th style="border-left:1px solid #617681;">
element
</th>
<th width="60%">
content
</th>
<th width="20%">
note
</th>
<td class="invisible" width="60">&nbsp;</td>
</tr>

<fieldset tal:omit-tag=""
  tal:repeat="field fields">
<rowset tal:omit-tag=""
  tal:define="global oddrow repeat/field/odd">

<tr class="odd" valign="top"
  tal:define="class python:test(oddrow, 'odd', 'even'); global lastclass class" tal:attributes="class class">
<td class="invisible" width="16">&nbsp;</td>
<td  class="field-title" style="border-left:1px solid #617681;">
<span tal:replace="python:field['title'].lower()">title</span><span class="warning"
  tal:condition="python:field.is_required()">*</span>
<span tal:omit-tag=""
  tal:condition="not:python:field.is_required()">
&nbsp;
</span>
</td>
<td align="left">
<input tal:replace="structure python:field.render(getattr(editable, field.id)())" />
</td>
<td>
<span tal:replace="python:field.get_value('description')">
comments here (field description)
</span>&nbsp;
</td>
<td class="invisible" width="60" align="right" valign="top">&nbsp;</td>
</tr>
</rowset>
</fieldset>

<tr class="controls">
<td class="invisible" width="16">&nbsp;</td>
<td style="border-left:1px solid #617681;">&nbsp;</td>
<td colspan="2" style="vertical-align:bottom">
<div class="controls">
<input class="button" type="submit"
       name="form_submitted" value="save subjects and target audiences" />
<a class="transport" href="normal_mode">back to article...</a>
</div>
</td>
<td class="invisible" width="60" align="right" valign="top">&nbsp;</td>
</tr>
</table>

</form>

<p class="halfline">&nbsp;</p>

</span>
