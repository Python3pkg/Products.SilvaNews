<tal:block define="global breadcrumb_vein string:Contents;" />
<!-- ___________________________ start index_html ______________________ -->
<html  metal:use-macro="here/macro_index/macros/master">
<div metal:fill-slot="main" tal:omit-tag="">
<!-- ___________________________ start index_html/slot main ____________________________ -->

<tal:block define="
  global locations model/locations;
  global silva_permissions here/get_silva_permissions;
  " />

<div class="margins">
  <h2>Manage lists of <span class="folder-title" tal:content="structure string:&laquo;${model/get_title_html}&raquo;">title here</span>
  </h2>

<form action="." name="lists" method="POST">
<table cellspacing="0" cellpadding="3" border="0" width="50%">
  <tr class="focus">
    <th colspan="2" align="left">Locations:</th>
  </tr>

  <tr tal:repeat="location locations" class="focus-cycle" tal:condition="locations">
    <td colspan="2"><input type="checkbox" name="locations:list" tal:attributes="value location" /><span tal:replace="location" /></td>
  </tr>

  <tr tal:condition="not: locations" class="focus-cycle">
    <td colspan="2">No locations defined yet</td>
  </tr>

  <tr class="focus">
    <td colspan="2"><input class="button" type="submit" name="manage_removeLocation:method" value=" Remove " /></td>
  </tr>

  <tr class="focus-cycle">
    <td colspan="2">Add location:</td>
  </tr>

  <tr class="focus">
    <td width="1%"><input type="text" name="location" size="60" /></td>
    <td><input class="button" type="submit" name="manage_addLocation:method" value=" Add " /></td>
  </tr>

</table>
</form>

</div>


<!-- ___________________________ end index_html/slot main ____________________________ -->
</div>
</html>
<!-- ___________________________ end index_html ______________________________________ -->
