<h3 class="heading newsitemheading" tal:content="structure context/get_title">article title</h3>

<div class="newsiteminfo">
 <tal:infopublic
   tal:define="
     publicationdate content/publication_time;
     displaydate content/display_datetime;
     formatdate nocall:context/service_news/format_date;"
   tal:condition="publicationdate">
  <p class="p newsiteminfopublicationdate">
   <tal:translate i18n:translate="">Publication: </tal:translate>
   <span class="newsitempublicationdate"
       tal:content="python: formatdate(displaydate or publicationdate)" />
  </p>
 </tal:infopublic>
</div>

<div class="newsintro">
 <img
   tal:define="classname python: 'newsitem-thumbnail-odd'"
   tal:replace="structure python: content.get_thumbnail(classname)"
  />
<!--   <tal:insertintro replace="structure r/get_intro" />-->
 <tal:insertintro replace="structure python:content.get_intro(max_size=128)" />
</div>

<p class="p articlelink">
 <a href="#" tal:attributes="href context/@@absolute_url" i18n:translate="">
  view article
 </a>
</p>
