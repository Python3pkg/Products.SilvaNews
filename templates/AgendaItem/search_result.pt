<div class="agenda_item_search_result news_item_search_result">
  <div class="event_actions">
    <a tal:attributes="href view/event_url"
       title="Add this event to your calendar">
      <img tal:attributes="src python: context.absolute_url() + '/++resource++Products.SilvaNews.browser/date.png'" />
      Add to my calendar
    </a>
  </div>
  <h3 class="heading newsitemheading" tal:content="structure context/get_title">article title</h3>

  <div class="newsiteminfo"
    tal:define="
      publicationdate context/publication_time;
      displaydate context/display_datetime;
      formatdate nocall:context/service_news/format_date;">
   <tal:infopublic
     tal:condition="publicationdate">
    <p class="p newsiteminfopublicationdate">
     <tal:translate i18n:translate="">Publication: </tal:translate>
     <span class="newsitempublicationdate"
         tal:content="python: formatdate(displaydate or publicationdate)" />
    </p>
   </tal:infopublic>

   <tal:comment tal:omit-tag=""><!-- if the object is an agenda item --></tal:comment>
   <p class="p eventdates"
     tal:define="
       startdate python: context.start_datetime(tz=request.timezone);
       enddate python: context.end_datetime(tz=request.timezone)"
     tal:condition="python: startdate or enddate">
    <tal:if condition="startdate">
     <span tal:omit-tag="" i18n:translate="">Start:</span>
     <tal:startdate replace="python: startdate.strftime('%Y-%m-%d')" />
    </tal:if>
    <tal:if condition="enddate"><br />
     <span tal:omit-tag="" i18n:translate="">End:</span>
     <tal:enddate replace="python: enddate.strftime('%Y-%m-%d')" />
    </tal:if>
   </p>
  </div>

  <div class="newsintro">
   <img 
     tal:define="classname python: 'newsitem-thumbnail-odd'"
     tal:replace="structure python: context.get_thumbnail(classname)"
    />
  <!--   <tal:insertintro replace="structure r/get_intro" />-->
   <tal:insertintro replace="structure python:context.get_intro(max_size=128)" />
  </div>

  <p class="p articlelink">
   <a href="#" tal:attributes="href python:context.get_content().absolute_url()" i18n:translate="">
    more ...
   </a>
  </p>
</div>
